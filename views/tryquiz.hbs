<div class="container">
    <br />
    <form action="/api/check-answer" method="POST">
        <input type="hidden" id="id" name="id" value="{{tryQuiz.id}}"/>
        <div class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control" id="question" name="question" aria-describedby="questionHelp" value="{{tryQuiz.question}}" disabled placeholder="Enter question">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Answers</label>
        </div>
        <div class="form-group">
            <label for="answer1">A.{{tryQuiz.answers}}</label>
            <input type="text" class="form-control" id="answer1" name="answer1" disabled placeholder="Answer" value="{{tryQuiz.answer1}}">
        </div>
       <div class="form-group">
            <label for="answer2">B.</label>
            <input type="text" class="form-control" id="answer2" name="answer2" disabled placeholder="Answer" value="{{tryQuiz.answer2}}">
        </div>
        <div class="form-group">
            <label for="answer3">C.</label>
            <input type="text" class="form-control" id="answer3" name="answer3" disabled placeholder="Answer" value="{{tryQuiz.answer3}}">
        </div>
        <div class="form-group">
            <label for="answer4">D.</label>
            <input type="text" class="form-control" id="answer4" name="answer4" disabled placeholder="Answer" value="{{tryQuiz.answer4}}">
        </div>
        <div class="form-group">
            <label for="correctAnswer">Correct Answer</label>
            <input type="text" class="form-control" id="answer" name="answer" placeholder="Pkease provide the correct answer">
        </div>
        <button type="submit" class="btn btn-primary">Answer</button>
        <a href="/" class="btn btn-primary"><ion-icon name="home"></ion-icon>Back</a>
    </form>
</div>